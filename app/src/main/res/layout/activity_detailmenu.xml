<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    tools:context="com.example.android.intan_1202154351_modul2.DetailMenu">

    <ImageView
        android:id="@+id/lblDetailGambar"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/lblDetailNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_alignBottom="@id/lblDetailGambar"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/lblDetailHarga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblDetailGambar"
        android:layout_marginTop="14dp"
        android:textAlignment="center"
        android:textSize="22dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/lblDetailKeterangan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblDetailHarga"
        android:layout_marginTop="29dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="16dp"
        android:textStyle="normal" />
</RelativeLayout>
